{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["node"],
    "module": "commonjs",
    "target": "ES2021",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": [
    "./scripts/**/*.ts",
    "./src/*",
    "./src/**/*",
    "./@types/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./build"
  ],
  "esModuleInterop": true
}
